{
  "manifest_version": 3,
  "name": "Datomacy",
  "version": "2.0.0",
  "description": "Universal data capture extension - Earn DMCY token rewards by contributing your browsing data to enterprise intent intelligence.",

  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "notifications",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Datomacy Extension",
    "default_icon": {
      "16": "icons/logo.png",
      "32": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "core/utils.js",
        "core/registry.js",
        "core/collector.js",
        "adapters/base.js",
        "adapters/default.js",
        "adapters/youtube.js",
        "adapters/twitter.js",
        "adapters/reddit.js",
        "adapters/medium.js",
        "content/main.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": ["http://localhost:3000/*", "https://www.tubedao.org/*", "https://tubedao.org/*", "https://datomacy.com/*", "https://www.datomacy.com/*"],
      "js": ["content/tubedao-content.js"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },

  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  }
} 