{
  "manifest_version": 3,
  "name": "TubeDAO",
  "version": "1.0.0",
  "description": "Capture and monetize your YouTube viewing data through decentralized data ownership.",

  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "notifications",
    "scripting"
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:3000/*",
    "https://www.tubedao.org/*",
    "http://localhost:8080/*",
    "https://a0bf0a745acf.ngrok-free.app/*"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "TubeDAO Extension",
    "default_icon": {
      "16": "icons/logo.png",
      "32": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["http://localhost:3000/*"],
      "js": ["content/tubedao-content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.tubedao.org/*"],
      "js": ["content/tubedao-content.js"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },

  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  }
} 